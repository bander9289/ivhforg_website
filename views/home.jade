html
  head
    title=title
    link(href='bootstrap/css/bootstrap.min.css', rel='stylesheet')
    script(type="text/javascript", src='jquery/jquery.min.js')
    script(type="text/javascript", src='bootstrap/js/bootstrap.min.js')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, user-scalable=no')
    style
      include custom.css
  body
    .horzscroll
        img(src="images/ivhf_org_front2_vert.jpg", alt="Bank of Chillicothe building, old & new")
    .container-fluid
      .row
        .col-sm-1
          .dropdown(role="navigation")
              button#dNav(class="btn btn-default btn-lg"
                  type="button"
                  data-toggle="dropdown"
                  aria-haspopup="true"
                  aria-expanded="false"
                  )
                span(class="sr-only") Dropdown Navigation
                span(class="caret")
              ul.dropdown-menu#menu(aria-labelledby="dNav")
                unless pageid == 'mission'
                  a.text-center(href="/")
                    h3 Mission
                unless pageid == 'follow'
                  a.text-center(href="/follow")
                    h3 Follow
                unless pageid == 'donate'
                  a.text-center(href="/donate")
                    h3 Donate
        .col-sm-5
          if pageid == 'mission'
            h2 Mission
            include ../content/mission.jade
          else if pageid == 'follow'
            h2 Follow/Contact
            include ../content/follow.jade
          else if pageid == 'donate'
            h2 Donate
            include ../content/donate.jade
          else
            h2 Unknown
            p Unknown page
        .col-sm-6
